{
  "manifest_version": 2,
  "name": "WaterlooWorks Plus",
  "short_name": "wwplus",
  "description": "The extension for WaterlooWorks you never realized you needed.",
  "version": "1.2.2",
  "author": "Kevin Xiao",
  "icons": {
    "16": "128.png",
    "48": "128.png",
    "128": "128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://waterlooworks.uwaterloo.ca/**"],
      "js": ["bundle.js"],
      "css": ["custom.css"]
    }
  ],
  "web_accessible_resources": ["inject_job_table.js", "inject_message_table.js"],
  "permissions": [
    "activeTab",
    "https://waterlooworks.uwaterloo.ca/**"
  ]
}